# =====================================================
# Environment Variables for Docker Compose
# Plateforme de Recrutement Intelligente
# =====================================================
# Instructions:
#   1. Copy this file to .env: cp .env.example .env
#   2. Update the values below with your actual configuration
#   3. DO NOT commit the .env file to version control
# =====================================================

# -----------------------------------------------------
# OpenAI API Configuration (REQUIRED)
# Get your API key from: https://platform.openai.com/api-keys
# -----------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536

# -----------------------------------------------------
# JWT Secret Key (REQUIRED)
# Used for JWT token generation and validation
# Minimum 256 bits (32 characters) recommended
# Generate with: openssl rand -base64 32
# -----------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-minimum-256-bits-change-this-in-production

# -----------------------------------------------------
# Database Configuration
# -----------------------------------------------------
POSTGRES_DB=recrutement
POSTGRES_USER=recrutement
POSTGRES_PASSWORD=recrutement123
POSTGRES_PORT=5432

# -----------------------------------------------------
# PgVector Configuration
# -----------------------------------------------------
PGVECTOR_INDEX_TYPE=IVFFLAT
PGVECTOR_DISTANCE_TYPE=COSINE_DISTANCE

# -----------------------------------------------------
# Application Configuration
# -----------------------------------------------------
SPRING_PROFILES_ACTIVE=prod
BACKEND_PORT=8080

# -----------------------------------------------------
# CORS Configuration
# Comma-separated list of allowed origins for API access
# For development: http://localhost:3000,http://localhost:4200
# For production: https://yourdomain.com,https://www.yourdomain.com
# -----------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# -----------------------------------------------------
# Logging Configuration
# -----------------------------------------------------
LOG_LEVEL=INFO
LOG_LEVEL_APP=DEBUG
